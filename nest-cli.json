{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "root": "src",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [".model.ts", ".input.ts", ".args.ts"],
          "introspectComments": true
        }
      }
    ]
  }
}
